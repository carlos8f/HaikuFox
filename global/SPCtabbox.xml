<?xml version="1.0"?>

<bindings id="tabBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">

  <binding id="tab" display="xul:button"
           extends="chrome://global/content/bindings/tabbox.xml#tab">
    <content>
      <xul:image id="chevron-icon"/>
      <xul:image id="tab-favicon" class="tab-icon" xbl:inherits="validate,src=image"/>
      <xul:label class="tab-text" xbl:inherits="value=label,accesskey,crop,disabled" flex="1"/>
    </content>
  </binding>
  
</bindings>

